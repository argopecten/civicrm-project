{
    "name": "argopecten/civicrm-project",
    "description": "Composer project template for CiviCRM with Drupal 8/9 in Aegir, with relocated document root",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "repositories": {
        "drupal8": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "aahtheme": {
            "type": "package",
            "package": {
                "name": "artfulrobot/aah",
                "version": "0.0.1",
                "type": "civicrm-ext",
                "source": {
                    "url": "https://github.com/artfulrobot/aah",
                    "type": "git",
                    "reference": "c6337c24"
                }
            }
        },
        "haystacktheme": {
            "type": "package",
            "package": {
                "name": "civicrm/haystacktheme",
                "version": "5.31",
                "type": "civicrm-ext",
                "source": {
                    "url": "https://lab.civicrm.org/extensions/haystacktheme",
                    "type": "git",
                    "reference": "5.31"
                }
            }
        },
        "shoreditch": {
            "type": "package",
            "package": {
                "name": "civicrm/org.civicrm.shoreditch",
                "version": "1.0.1",
                "type": "civicrm-ext",
                "source": {
                    "url": "https://github.com/civicrm/org.civicrm.shoreditch",
                    "type": "git",
                    "reference": "1.0.0-beta.5"
                }
            }
        }
    },
    "require": {
        "artfulrobot/aah": "0.0.1",
        "civicrm/civicrm-asset-plugin": "~1.1",
        "civicrm/civicrm-core": "~5.35.0",
        "civicrm/civicrm-drupal-8": "~5.35.0",
        "civicrm/civicrm-packages": "~5.35.0",
        "civicrm/haystacktheme": "5.31",
        "civicrm/org.civicrm.shoreditch": "1.0.1",
        "composer/installers": "^1.10",
        "drupal-composer/drupal-l10n": "^2.0",
        "drupal/bootstrap4": "~2.1.6",
        "drupal/civicrm_entity": "^3.0@beta",
        "drupal/core-composer-scaffold": "^8.8",
        "drupal/core-recommended": "~8.9.13",
        "drupal/core-vendor-hardening": "~8.9.13",
        "drupal/ga_login": "^1.0@alpha",
        "drupal/real_aes": "^2.3",
        "drupal/webform_civicrm": "^5.0@beta",
        "drush/drush": "^8.4.6"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "remove-built-in-profiles": [
            "rm -rf web/core/profiles/demo_umami",
            "rm -rf web/core/profiles/minimal",
            "rm -rf web/core/profiles/nightwatch_*",
            "rm -rf web/core/profiles/testin*"
        ],
        "post-install-cmd": [
            "@remove-built-in-profiles",
            "bash scripts/install-l10n/deploy-l10n.sh 5.35.0"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"],
            "vendor/civicrm/civicrm-core/ext/{$name}": ["type:civicrm-ext"]
        },
        "enable-patching": "true",
        "compile-whitelist": ["civicrm/civicrm-core", "civicrm/composer-compile-lib"],
        "drupal-l10n": {
            "destination": "core/profiles/standard/translations",
            "languages": ["hu"]
        },
        "drupal-core-vendor-hardening": {
            "civicrm/civicrm-asset-plugin": ["tests"],
            "civicrm/civicrm-core": ["tests"],
            "civicrm/civicrm-cxn-rpc": ["tests", "doc"],
            "civicrm/composer-compile-plugin": ["tests", "doc"],
            "civicrm/composer-downloads-plugin": ["tests"],
            "chillerlan/php-qrcode": ["tests", "docs", "examples"],
            "chillerlan/php-settings-container": ["tests", "examples"],
            "christian-riesen/otp": ["tests", "example"],
            "cweagans/composer-patches": ["tests"],
            "defuse/php-encryption": ["docs", "dist"],
            "dflydev/apache-mime-types": ["tests"],
            "dflydev/dot-access-data": ["tests"],
            "doctrine/lexer": ["docs", "tests"],
            "drush/drush": ["docs", "examples", "tests"],
            "electrolinux/phpquery": ["test-cases", "unit-tests", "api-reference"],
            "marcj/topsort": ["tests"],
            "padaliyajay/php-autoprefixer": ["test"],
            "paragonie/constant_time_encoding": ["tests"],
            "pear/console_table": ["test"],
            "pear/log": ["docs", "exmaples", "tests"],
            "pear/mail": ["tests"],
            "pear/validate_finance_creditcard": ["docs", "tests"],
            "phenx/php-font-lib": ["sample-fonts", "tests"],
            "phenx/php-svg-lib": ["tests"],
            "phpoffice/common": ["tests"],
            "sabberworm/php-css-parser": ["tests"],
            "tecnickcom/tcpdf": ["examples"],
            "totten/ca-config": ["tests"],
            "totten/lurkerlite": ["tests"],
            "tplaner/when": ["tests"],
            "tubalmartin/cssmin": ["tests"],
            "webflo/drupal-finder": ["tests"],
            "webmozart/path-util": ["tests", "docs"],
            "xkerman/restricted-unserialize": ["test", "docker"],
            "zetacomponents/base": ["design", "docs", "tests"],
            "zetacomponents/mail": ["design", "docs","tests"]
        }
    }
}
