{
    "name": "argopecten/drupal-project",
    "description": "Project template for Aegir with Drupal 8/9 having relocated document root",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": {
        "drupal8": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "aahtheme": {
            "type": "package",
            "package": {
                "name": "artfulrobot/aah",
                "version": "0.0.1",
                "type": "civicrm-ext",
                "source": {
                    "url": "https://github.com/artfulrobot/aah",
                    "type": "git",
                    "reference": "c6337c24"
                }
            }
        },
        "haystacktheme": {
            "type": "package",
            "package": {
                "name": "civicrm/haystacktheme",
                "version": "5.31",
                "type": "civicrm-ext",
                "source": {
                    "url": "https://lab.civicrm.org/extensions/haystacktheme",
                    "type": "git",
                    "reference": "5.31"
                }
            }
        },
        "shoreditch": {
            "type": "package",
            "package": {
                "name": "civicrm/org.civicrm.shoreditch",
                "version": "1.0.1",
                "type": "civicrm-ext",
                "source": {
                    "url": "https://github.com/civicrm/org.civicrm.shoreditch",
                    "type": "git",
                    "reference": "0247cef0"
                }
            }
        }
    },
    "require": {
        "artfulrobot/aah": "0.0.1",
        "civicrm/civicrm-asset-plugin": "~1.1",
        "civicrm/civicrm-core": "5.35",
        "civicrm/civicrm-drupal-8": "5.35",
        "civicrm/civicrm-packages": "5.35",
        "civicrm/haystacktheme": "5.31",
        "civicrm/org.civicrm.shoreditch": "1.0.1",
        "composer/installers": "^1.2",
        "drupal-composer/drupal-l10n": "^2.0",
        "drupal/bootstrap4": "^2.1",
        "drupal/civicrm_entity": "^3.0@beta",
        "drupal/core-composer-scaffold": "^8.8",
        "drupal/core-recommended": "8.9.13",
        "drupal/core-vendor-hardening": "8.9.13",
        "drupal/ga_login": "^1.0@alpha",
        "drupal/webform_civicrm": "dev-5.x#908e59a7",
        "drush/drush": "^8.4.6"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "remove-built-in-profiles": [
            "rm -rf web/core/profiles/demo_umami",
            "rm -rf web/core/profiles/minimal",
            "rm -rf web/core/profiles/nightwatch_*",
            "rm -rf web/core/profiles/testin*"
        ],
        "post-update-cmd": [
            "@remove-built-in-profiles",
            "bash scripts/install-l10n/deploy-l10n.sh 5.35.0"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"],
            "vendor/civicrm/civicrm-core/ext/{$name}": ["type:civicrm-ext"]
        },
        "enable-patching": "true",
        "compile-whitelist": ["civicrm/civicrm-core", "civicrm/composer-compile-lib"],
        "drupal-l10n": {
            "destination": "web/core/profiles/standard/translations",
            "languages": ["hu"]
        }
    }
}
