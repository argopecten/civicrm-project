{
    "name": "argopecten/civicrm-project",
    "description": "CiviCRM platform with Drupal 7 on Aegir 3, using Composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Argopecten",
            "role": ""
        }
    ],
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/7"
        },
        "civicrm-profile": {
            "type": "vcs",
            "url":  "https://github.com/argopecten/civicrm-profile"
        },
        "civicrm-core": {
            "type": "package",
            "package": {
                "name": "civicrm/civicrm",
                "version": "5.20.2",
                "type": "drupal-module",
                "dist": {
                    "url": "https://download.civicrm.org/civicrm-5.20.2-drupal.tar.gz",
                    "type": "tar"
                }
            }
        },
        "l10n": {
            "type": "package",
            "package": {
                "name": "civicrm/civicrm_l10n_core",
                "version": "5.20.2",
                "type": "drupal-library",
                "dist": {
                    "url": "https://download.civicrm.org/civicrm-5.20.2-l10n.tar.gz",
                    "type": "tar"
                }
            }
        },
        "shoreditch": {
            "type": "package",
            "package": {
                "name": "civicrm/org.civicrm.shoreditch",
                "version": "v0.1-alpha35",
                "type": "drupal-library",
                "source": {
                    "url": "https://github.com/civicrm/org.civicrm.shoreditch",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    },
    "require": {
        "php": "7.2.* || 7.3.*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-xml": "*",
        "composer/installers": "^1.2",
        "composer/semver": "^1.4",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-composer/preserve-paths": "^0.1",
        "drupal/composer_autoloader": "^1.0",
        "drupal/drupal": "^7.69",
        "drush/drush": "^8.0",
        "symfony/filesystem": "~2.7|^3",
        "webflo/drupal-finder": "^1.0.0",
        "argopecten/civicrmprofile": "5.20.2+7.69"
    },
    "conflict": {
        "drupal/core": "8.*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "remove-built-in-profiles": [
            "rm -rf web/profiles/standard",
            "rm -rf web/profiles/minimal",
            "rm -rf web/profiles/testing"
        ],
        "move-drush-files": [
            "cp -rl web/profiles/civicrmprofile/drush web/sites/all",
            "rm -rf web/profiles/civicrmprofile/drush"
        ],
        "install-l10n": [
            "mkdir -p web/sites/all/modules/contrib/civicrm/l10n",
            "cp -r web/sites/all/libraries/civicrm_l10n_core/l10n/hu_HU/ web/sites/all/modules/contrib/civicrm/l10n",
            "cp web/sites/all/libraries/civicrm_l10n_core/sql/*.hu_HU.mysql web/sites/all/modules/contrib/civicrm/sql/",
            "rm -rf web/sites/all/libraries/civicrm_l10n_core"
        ],
        "theme-settings": [
            "mv web/sites/all/libraries/org.civicrm.shoreditch web/sites/all/modules/contrib/civicrm/ext",
            "cd web/sites/all/modules/contrib/civicrm/ext/org.civicrm.shoreditch; git checkout 'v0.1-alpha35'"
        ],
        "pre-install-cmd": [
            "CiviCRMProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "CiviCRMProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "CiviCRMProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "CiviCRMProject\\composer\\ScriptHandler::createRequiredFiles",
            "@remove-built-in-profiles",
            "@install-l10n",
            "@move-drush-files",
            "@theme-settings"
        ],
        "post-create-project-cmd": [
            "CiviCRMProject\\composer\\ScriptHandler::removeInternalFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/": ["type:drupal-core"],
            "web/profiles/{$name}/": ["type:drupal-profile"],
            "web/sites/all/drush/{$name}/": ["type:drupal-drush"],
            "web/sites/all/libraries/{$name}/": ["type:drupal-library"],
            "web/sites/all/modules/contrib/{$name}/": ["type:drupal-module"],
            "web/sites/all/themes/contrib/{$name}/": ["type:drupal-theme"]
        },
        "patches": {
            "cweagans/composer-patches": {
                "Call the preserve paths hooks" : "https://github.com/SebCorbin/composer-patches/commit/1cb9bacba51f8bba0c5f3f322c3bb61e4ceae974.patch"
            }
        },
        "preserve-paths": [
            "web/sites"
        ]
    }
}
