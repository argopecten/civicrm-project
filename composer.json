{
    "name": "argopecten/civicrm-project",
    "description": "Project template in Aegir for CiviCRM with Drupal 9 having relocated document root",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "ext-bcmath": "*",
        "ext-curl": "*",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-soap": "*",
        "ext-zip": "*",
        "php": "7.4.* || 8.0.*",
        "civicrm/civicrm-core": "^5.52",
        "civicrm/civicrm-drupal-8": "^5.52",
        "civicrm/civicrm-packages": "^5.52",
        "composer/installers": "^1.9",
        "drupal-composer/drupal-l10n": "^2.0",
        "drupal/bootstrap": "^3.25",
        "drupal/civicrm_entity": "^3.3",
        "drupal/core-composer-scaffold": "^9.4",
        "drupal/core-recommended": "^9.4",
        "drupal/webform_civicrm": "^6.2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": true,
        "platform": {
            "php": "7.4"
        }
    },
    "scripts": {
        "remove-built-in-profiles": [
            "rm -rf web/core/profiles/demo_umami",
            "rm -rf web/core/profiles/minimal",
            "rm -rf web/core/profiles/nightwatch_*",
            "rm -rf web/core/profiles/testin*"
        ],
        "post-install-cmd": [
            "@remove-built-in-profiles",
            "bash scripts/install-l10n/deploy-civicrm-l10n.sh 5.52.0"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "drupal-l10n": {
            "destination": "core/profiles/standard/translations",
            "languages": ["hu"]
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/profiles/custom/{$name}": ["type:drupal-custom-profile"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
        },
        "downloads": {
            "shoreditch": {
                "version": "1.0.0-beta.11",
                "path": "vendor/civicrm/civicrm-core/ext/org.civicrm.shoreditch",
                "url": "https://github.com/civicrm/org.civicrm.shoreditch/archive/{$version}.zip",
                "ignore": ["package.json", ".stylelintrc"]
            },
            "org.civicrm.contactlayout": {
                "version": "2.1.0",
                "path": "vendor/civicrm/civicrm-core/ext/org.civicrm.contactlayout",
                "url": "https://github.com/civicrm/civicrm.contactlayout/archive/{$version}.zip"
            },

        },
        "enable-patching": "true",
        "compile-whitelist": ["civicrm/civicrm-core", "civicrm/composer-compile-lib"]
    }
}
