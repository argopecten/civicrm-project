{
    "name": "argopecten/civicrm-project",
    "description": "CiviCRM platform with Drupal 7 on Aegir 3, using Composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Argopecten",
            "role": ""
        }
    ],
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/7"
        },
        "civicrm-profile": {
            "type": "vcs",
            "url":  "https://github.com/argopecten/civicrm-profile"
        },
        "civiboot": {
            "type": "vcs",
            "url":  "https://github.com/argopecten/civiboot"
        },
        "civicrm-core": {
            "type": "package",
            "package": {
                "name": "civicrm/civicrm",
                "version": "5.36.1",
                "type": "drupal-module",
                "dist": {
                    "url": "https://download.civicrm.org/civicrm-5.36.1-drupal.tar.gz",
                    "type": "tar"
                }
            }
        },
        "shoreditch": {
            "type": "package",
            "package": {
                "name": "civicrm/org.civicrm.shoreditch",
                "version": "1.0.0-beta.6",
                "type": "drupal-library",
                "source": {
                    "url": "https://github.com/civicrm/org.civicrm.shoreditch",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        "csvimport": {
            "type": "package",
            "package": {
                "name": "eileenmcnaughton/nz.co.fuzion.csvimport",
                "version": "1.5",
                "type": "drupal-library",
                "source": {
                    "url": "https://github.com/eileenmcnaughton/nz.co.fuzion.csvimport",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        "gdpr": {
            "type": "package",
            "package": {
                "name": "veda-consulting/uk.co.vedaconsulting.gdpr",
                "version": "3.1",
                "type": "drupal-library",
                "source": {
                    "url": "https://github.com/veda-consulting/uk.co.vedaconsulting.gdpr",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        "angularprofiles": {
            "type": "package",
            "package": {
                "name": "ginkgostreet/org.civicrm.angularprofiles",
                "version": "1.2.2",
                "type": "drupal-library",
                "source": {
                    "url": "https://lab.civicrm.org/extensions/angularprofiles",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        "contactlayout": {
            "type": "package",
            "package": {
                "name": "civicrm/org.civicrm.contactlayout",
                "version": "1.9.0",
                "type": "drupal-library",
                "source": {
                    "url": "https://github.com/civicrm/org.civicrm.contactlayout",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        "openstreetmap": {
            "type": "package",
            "package": {
                "name": "bjendres/de.systopia.osm",
                "version": "1.3.0",
                "type": "drupal-library",
                "source": {
                    "url": "https://github.com/bjendres/de.systopia.osm",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    },
    "require": {
        "php": "7.2.* || 7.3.* || 7.4.*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-xml": "*",
        "composer/installers": "^1.2",
        "composer/semver": "^1.4",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-composer/preserve-paths": "^0.1",
        "drupal/composer_autoloader": "^1.0",
        "drupal/drupal": "^7.80",
        "drush/drush": "^8.0",
        "symfony/filesystem": "~2.7|^3",
        "webflo/drupal-finder": "^1.0.0",
        "argopecten/civicrmprofile": "dev-7.x-proba"
    },
    "conflict": {
        "drupal/core": "8.*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "remove-built-in-profiles": [
            "rm -rf web/profiles/standard",
            "rm -rf web/profiles/minimal",
            "rm -rf web/profiles/testing"
        ],
        "set-extensions": [
            "mv web/sites/all/libraries/* web/sites/all/modules/contrib/civicrm/ext/",
            "cd web/sites/all/modules/contrib/civicrm/ext/nz.co.fuzion.csvimport;      git checkout '1359f9a8'",
            "cd web/sites/all/modules/contrib/civicrm/ext/uk.co.vedaconsulting.gdpr;   git checkout '3.1'",
            "cd web/sites/all/modules/contrib/civicrm/ext/org.civicrm.angularprofiles; git checkout 'v1.2.2'",
            "cd web/sites/all/modules/contrib/civicrm/ext/org.civicrm.contactlayout;   git checkout '1.9.0'",
            "cd web/sites/all/modules/contrib/civicrm/ext/de.systopia.osm;             git checkout '1.3'",
            "cd web/sites/all/modules/contrib/civicrm/ext/org.civicrm.shoreditch;      git checkout '1.0.0-beta.6'"
        ],
        "move-drush-files": [
            "cp -rl web/profiles/civicrmprofile/drush web/sites/all",
            "rm -rf web/profiles/civicrmprofile/drush"
        ],
        "pre-install-cmd": [
            "CiviCRMProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "CiviCRMProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "CiviCRMProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "CiviCRMProject\\composer\\ScriptHandler::createRequiredFiles",
            "@remove-built-in-profiles",
            "bash scripts/aegir/install-l10n.sh",
            "@move-drush-files",
            "@set-extensions"
        ],
        "post-create-project-cmd": [
            "CiviCRMProject\\composer\\ScriptHandler::removeInternalFiles"
        ]
    },
    "extra": {
        "drupal-l10n": {
            "destination": "profiles/civicrmprofile/translations",
            "languages": ["hu"]
        },
        "installer-paths": {
            "web/": ["type:drupal-core"],
            "web/profiles/{$name}/": ["type:drupal-profile"],
            "web/sites/all/drush/{$name}/": ["type:drupal-drush"],
            "web/sites/all/libraries/{$name}/": ["type:drupal-library"],
            "web/sites/all/modules/contrib/{$name}/": ["type:drupal-module"],
            "web/sites/all/themes/contrib/{$name}/": ["type:drupal-theme"]
        },
        "patches": {
            "cweagans/composer-patches": {
                "Call the preserve paths hooks" : "https://github.com/SebCorbin/composer-patches/commit/1cb9bacba51f8bba0c5f3f322c3bb61e4ceae974.patch"
            }
        },
        "preserve-paths": [
            "web/sites"
        ]
    }
}
